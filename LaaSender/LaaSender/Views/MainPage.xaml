<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LaaSender"
             xmlns:sh="clr-namespace:LaaSender.Helpers"
             x:Class="LaaSender.Views.MainPage"
             BackgroundColor="Transparent"
             NavigationPage.HasNavigationBar="False">
    <sh:MaterialFrame Style="{StaticResource DefaultFrame}" StyleClass="blur">
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="{AppThemeBinding Dark=#77000000, Light=#77ffffff}" />
            </Grid.Background>
            <StackLayout VerticalOptions="Center">
                <Button x:Name="BluetoothButton" 
                        Text="Bluetooth" 
                        FontSize="28" 
                        HorizontalOptions="FillAndExpand" 
                        VerticalOptions="Center" 
                        Clicked="BluetoothButton_Clicked"
                        TextColor="Accent" 
                        BackgroundColor="Transparent" />
                <Button x:Name="WifiButton" 
                        Text="Wifi" 
                        FontSize="28" 
                        HorizontalOptions="FillAndExpand" 
                        VerticalOptions="Center" 
                        Clicked="WifiButton_Clicked"
                        TextColor="Accent" 
                        BackgroundColor="Transparent" />
                <Button x:Name="SettingsButton" 
                        Text="Settings" 
                        FontSize="28" 
                        HorizontalOptions="FillAndExpand" 
                        VerticalOptions="Center" 
                        Clicked="SettingsButton_Clicked"
                        TextColor="Accent" 
                        BackgroundColor="Transparent" />
            </StackLayout>
        </Grid>
    </sh:MaterialFrame>
</ContentPage>